#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = myErp.exe test.dll DataShare.bpl DbConfig.exe test1.dll
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

myErp.exe: myErp.dpr
  $(DCC)

test.dll: source\Plugin\test\test.dpr
  $(DCC)

DataShare.bpl: DataSharePack\DataShare.dpk
  $(DCC)

DbConfig.exe: DBConfig\DbConfig.dpr
  $(DCC)

test1.dll: source\Plugin\test1\test1.dpr
  $(DCC)


